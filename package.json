{
    "private": true,
    "license": "MIT",
    "scripts": {
        "cleanup": "rm -rf ./node_modules",
        "css:build-dev": "cross-env ENV_BUILD=dev postcss nova/resources/css/*.css --base nova/resources --dir dist --verbose",
        "css:build-prod": "cross-env ENV_BUILD=prod postcss nova/resources/css/*.css --base nova/resources --dir dist --verbose",
        "css:build-themes": "concurrently \"npm run css:build-theme-celestial\" \"npm run css:build-theme-cerritos\" \"npm run css:build-theme-event-horizon\" \"npm run css:build-theme-pulsar\" \"npm run css:build-theme-titan\"",
        "css:build-theme-celestial": "cross-env ENV_BUILD=dev postcss \"themes/Celestial/resources/css/**/*.css\" --base themes/Celestial/resources/css --dir themes/Celestial/design --verbose",
        "css:build-theme-cerritos": "cross-env ENV_BUILD=dev postcss \"themes/Cerritos/resources/css/**/*.css\" --base themes/Cerritos/resources/css --dir themes/Cerritos/design --verbose",
        "css:build-theme-event-horizon": "cross-env ENV_BUILD=dev postcss \"themes/EventHorizon/resources/css/**/*.css\" --base themes/EventHorizon/resources/css --dir themes/EventHorizon/design --verbose",
        "css:build-theme-pulsar": "cross-env ENV_BUILD=dev postcss \"themes/Pulsar/resources/css/**/*.css\" --base themes/Pulsar/resources/css --dir themes/Pulsar/design --verbose",
        "css:build-theme-titan": "cross-env ENV_BUILD=dev postcss \"themes/Titan/resources/css/**/*.css\" --base themes/Titan/resources/css --dir themes/Titan/design --verbose",
        "js:build-dev": "esbuild nova/resources/js/app.js --bundle --minify --sourcemap=inline --outfile=dist/js/app.js",
        "js:build-prod": "esbuild nova/resources/js/app.js --bundle --minify --outfile=dist/js/app.js",
        "dev": "concurrently \"npm run js:build-dev\" \"npm run css:build-dev\" \"npm run css:build-themes\"",
        "prod": "concurrently \"npm run js:build-prod\" \"npm run css:build-prod\" \"npm run css:build-dev\""
    },
    "dependencies": {
        "@alpinejs/collapse": "^3.10",
        "@alpinejs/focus": "^3.10",
        "@awcodes/alpine-floating-ui": "^3.4",
        "@jaames/iro": "^5.5",
        "@nextapps-be/livewire-sortablejs": "^0.2",
        "@ryangjchandler/alpine-clipboard": "^2.2",
        "@ryangjchandler/alpine-tooltip": "^2.0",
        "@tiptap/core": "^2.0",
        "@tiptap/extension-character-count": "^2.0",
        "@tiptap/extension-link": "^2.0",
        "@tiptap/extension-text-align": "^2.0",
        "@tiptap/extension-underline": "^2.0",
        "@tiptap/pm": "^2.0",
        "@tiptap/starter-kit": "^2.0",
        "@yaireo/tagify": "^4.17",
        "alpinejs": "^3.10",
        "axios": "^1.1",
        "countable": "^3.0",
        "cross-env": "^7.0",
        "date-fns": "^3.2",
        "esbuild": "^0.15",
        "hex-to-rgba": "^2.0",
        "lodash": "^4.17",
        "numeral": "^2.0",
        "pluralize": "^8.0",
        "pretty": "^2.0",
        "resolve-url-loader": "^5.0",
        "sortablejs": "^1.15",
        "tippy.js": "^6.3"
    },
    "devDependencies": {
        "@danharrin/alpine-mousetrap": "^0.1",
        "@tailwindcss/aspect-ratio": "^0.4",
        "@tailwindcss/container-queries": "^0.1",
        "@tailwindcss/forms": "^0.5",
        "@tailwindcss/line-clamp": "^0.4",
        "@tailwindcss/typography": "^0.5",
        "autoprefixer": "^10.4",
        "concurrently": "^8.0",
        "cssnano": "^6.0",
        "cypress": "^13.2",
        "cypress-file-upload": "^5.0",
        "eslint": "^8.27",
        "eslint-config-airbnb-base": "^15.0",
        "eslint-import-resolver-webpack": "^0.13",
        "eslint-plugin-import": "^2.26",
        "postcss": "^8.4",
        "postcss-cli": "^11.0",
        "postcss-import": "^16.0",
        "prettier": "^3.2",
        "prettier-plugin-blade": "^2.0",
        "prettier-plugin-tailwindcss": "^0.5",
        "tailwindcss": "^3.4",
        "tailwindcss-animation-delay": "^1.2"
    }
}